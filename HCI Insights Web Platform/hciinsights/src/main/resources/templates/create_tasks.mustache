<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header}}

<body class="cream-bg">

{{> fragments/navbar }}

<div class="bg-circle navy top-left"></div>
<div class="bg-circle maroon bottom-right"></div>
<div class="bg-circle navy mid"></div>

<div class="back-btn-floating">
    <a class="btn btn-back" href="/studies/{{studyId}}/tasks">â† Back to Tasks</a>
</div>

<div class="container" style="max-width: 700px; margin-top: 40px;">

    <h1>Create Task for Study {{studyId}}</h1>

    {{#errorMessage}}
        <p class="error-message">{{.}}</p>
    {{/errorMessage}}

    <form action="/studies/{{studyId}}/tasks/create" method="POST" class="form-card">

        <label>Task Order</label>
        <input type="number" name="taskOrder" required min="1">

        <label>Description</label>
        <textarea name="description" rows="4" required></textarea>

        <label>Success Criteria</label>
        <textarea name="successCriteria" rows="3" required></textarea>

        <label>Expected Time (minutes)</label>
        <input type="number" name="expectedCompTime" required>

        <button type="submit" class="btn">Create Task</button>
    </form>

</div>

{{> fragments/footer}}
</body>
</html>