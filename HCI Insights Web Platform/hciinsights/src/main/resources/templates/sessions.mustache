<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header}}
<body class="cream-bg">

{{> fragments/navbar}}

<div class="bg-circle maroon bottom-right"></div>

<div class="back-btn-floating">
    <a class="btn btn-back" href="/studies/{{studyId}}">‚Üê Back</a>
</div>

<div class="container">

    <h2>Sessions</h2>

    <a class="btn" href="/studies/{{studyId}}/sessions/create">+ Create Session</a>

    {{#sessions}}
        <div class="card">
            <h3>Session {{sessionId}}</h3>

            <p><strong>Participant:</strong> {{participantId}}</p>
            <p><strong>Scheduled:</strong> {{scheduled}}</p>
            <p><strong>Score:</strong> {{score}}</p>

            <div class="card-actions">
                <div class="card-action-left">
                    <a class="btn small" href="/studies/{{studyId}}/sessions/{{sessionId}}">View</a>
                </div>
                <div class="card-action-right">
                    <a class="btn small btn-danger" href="/studies/{{studyId}}/sessions/delete/{{sessionId}}">Delete</a>
                </div>
            </div>

        </div>
    {{/sessions}}

</div>

{{> fragments/footer}}
</body>
</html>